<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingBottom="10dp"
    app:contentPaddingTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="6dp"
            android:layout_marginLeft="10dp"
            app:cardPreventCornerOverlap="true"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tx2"
                android:id="@+id/picture"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瞻仰sjdj/n03-30"
            android:textSize="15sp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/peoplePoem"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/figer"
            android:src="@drawable/support"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toLeftOf="@id/messagep"
            android:id="@+id/messageK"
            android:textColor="@color/pxc"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/messagep"
            android:layout_width="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/message"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textInput"
            android:layout_alignParentRight="true"
            android:text="62"
            android:textColor="@color/pop"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>