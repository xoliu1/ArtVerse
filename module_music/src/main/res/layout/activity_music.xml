<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MusicActivity"
    android:background="@drawable/dynasty_bg"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />





            <!-- 放置标题栏或其他顶部元素 -->


    <!-- 底部播放栏 -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:layout_editor_absoluteX="41dp">

        <!-- 放置可滑动的内容 -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/dynasty_bg"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toTopOf="@id/constr">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bk_main" />


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:fontFamily="@font/font1"
                android:text="大家都在听"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                android:background="@color/transparent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_popular"
                android:background="@color/transparent"
                />
            <TextView
                android:background="@color/transparent"
                android:id="@+id/tv_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:fontFamily="@font/font1"
                android:text="诗友投稿"
                app:layout_constraintTop_toBottomOf="@id/rv_popular" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_origin"
                android:background="@color/transparent"/>
            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/rv_origin"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/singerImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bk_main"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/singerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:textSize="25sp"
                android:text="将进酒"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/saddlebrown"
                android:fontFamily="@font/font9"/>

            <ImageView
                android:id="@+id/btn_on"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/btn_on"
                
                />

            <ImageView
                android:id="@+id/btn_info"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/btn_info"
                android:layout_margin="10dp"
                />


        </LinearLayout>
            
    </androidx.cardview.widget.CardView>
        



</androidx.constraintlayout.widget.ConstraintLayout>