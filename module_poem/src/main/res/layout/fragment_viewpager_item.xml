<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#F6F0F0"
    tools:context=".viewpager.fragment_viewpager_item">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="40dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_insert"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/top_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toTopOf="@id/constraint_insert"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/top_image"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:singleLine="false"
                android:ellipsize="end"
                android:fontFamily="@font/font8"
                android:text="锄禾日当午，汗滴禾下土"
                />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/constraint_insert"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/pomo"
                android:text="刘亮程《一个人的存在》"
                />

            <LinearLayout
                android:id="@+id/icons_group"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@id/constraint_insert"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:src="@drawable/share"
                    />
                <TextView
                    android:id="@+id/tv_share_num"
                    android:layout_width="50dp"
                    android:gravity="center|left"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40dp"/>
                <ImageButton
                    android:id="@+id/btn_comment"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:src="@drawable/comment"
                    />
                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="50dp"
                    android:gravity="center|left"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40dp"/>
                
                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:background="@color/transparent"
                   android:src="@drawable/like"
                    />
                <TextView
                    android:id="@+id/tv_like_num"
                    android:gravity="center|left"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>














        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>